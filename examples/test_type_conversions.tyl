// Test type conversion functions: int(), float(), bool(), str()

// Test int() conversions
println("=== Testing int() ===")

// int from string
x = int("42")
println("int('42') = ", x)

x = int("-123")
println("int('-123') = ", x)

x = int("  456  ")
println("int('  456  ') = ", x)

// int from float (truncation)
y = 3.7
z = int(y)
println("int(3.7) = ", z)

// int from bool
b = true
println("int(true) = ", int(b))
println("int(false) = ", int(false))

// Test float() conversions
println("")
println("=== Testing float() ===")

// float from int
f = float(42)
println("float(42) = ", f)

// float from string
f = float("3.14159")
println("float('3.14159') = ", f)

// float from negative int
f = float(-10)
println("float(-10) = ", f)

// Test bool() conversions
println("")
println("=== Testing bool() ===")

// bool from int
println("bool(0) = ", bool(0))
println("bool(1) = ", bool(1))
println("bool(42) = ", bool(42))
println("bool(-1) = ", bool(-1))

// bool from string
println("bool('') = ", bool(""))
println("bool('hello') = ", bool("hello"))
println("bool('0') = ", bool("0"))
println("bool('false') = ", bool("false"))
println("bool('true') = ", bool("true"))

// Test str() conversions (already working)
