// Test true fixed-size arrays with C-style 0-based indexing

fn main:
    println("=== Fixed-Size Array Test ===")
    
    // Test basic fixed-size array
    println("")
    println("Basic fixed-size array [int; 5]:")
    mut arr: [int; 5]
    arr[0] = 10
    arr[1] = 20
    arr[2] = 30
    arr[3] = 40
    arr[4] = 50
    
    println("  arr[0] = ", arr[0])
    println("  arr[1] = ", arr[1])
    println("  arr[2] = ", arr[2])
    println("  arr[3] = ", arr[3])
    println("  arr[4] = ", arr[4])
    
    // Test smaller element types
    println("")
    println("Fixed array with i32 elements:")
    mut arr32: [i32; 4]
    arr32[0] = 100
    arr32[1] = 200
    arr32[2] = 300
    arr32[3] = 400
    println("  arr32[0] = ", arr32[0])
    println("  arr32[1] = ", arr32[1])
    println("  arr32[2] = ", arr32[2])
    println("  arr32[3] = ", arr32[3])
    
    // Test byte array
    println("")
    println("Fixed array with u8 elements:")
    mut bytes: [u8; 8]
    bytes[0] = 65
    bytes[1] = 66
    bytes[2] = 67
    bytes[3] = 68
    println("  bytes[0] = ", bytes[0])
    println("  bytes[1] = ", bytes[1])
    println("  bytes[2] = ", bytes[2])
    println("  bytes[3] = ", bytes[3])
    
    println("")
    println("Fixed-size array test complete!")
