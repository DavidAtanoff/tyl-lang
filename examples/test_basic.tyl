println("zero = {zero}")
println("pi = {pi}")
println("temp = {temp}")
println("active = {active}")
println("done = {done}")
println("greeting = {greeting}")
println("PI constant = {PI}")
println("MAX_SIZE constant = {MAX_SIZE}")
println("counter after increments = {counter}")
