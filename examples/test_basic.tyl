// Test 1: Basic Variables and Data Types
// Testing: integers, floats, booleans, strings, nil

// Integers
x = 42
negative = -100
zero = 0

// Floats
pi = 3.14159
temp = -40.5

// Booleans
active = true
done = false

// Strings
name = "World"
greeting = "Hello, {name}!"

// Compile-time constants
PI :: 3.14159
