// Test 4: Control Flow
// Testing: if/elif/else, while, for, break, continue

println("=== Control Flow Test ===")

// If/elif/else
x = 15

if x > 20:
    println("x > 20")
elif x > 10:
    println("x > 10 (correct)")
elif x > 5:
    println("x > 5")
else:
    println("x <= 5")

// Nested if
y = 5
if y > 0:
    if y < 10:
        println("y is between 0 and 10 (correct)")

// While loop
println("While loop counting to 5:")
mut i = 1
while i <= 5:
    println("  i = {i}")
    i += 1

// For loop with range
println("For loop 0..5:")
for j in 0..5:
    println("  j = {j}")

// For loop with range function
println("For loop range(3):")
for k in range(3):
    println("  k = {k}")

println("For loop range(2, 5):")
for m in range(2, 5):
    println("  m = {m}")

// Break test
println("Break test (should stop at 3):")
for n in 0..10:
    if n == 3:
        break
    println("  n = {n}")

// Continue test
println("Continue test (skip even numbers):")
for p in 0..6:
    if p % 2 == 0:
        continue
    println("  p = {p}")

println("Test 4 PASSED")
