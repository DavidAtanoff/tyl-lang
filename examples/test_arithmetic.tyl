// Test 2: Arithmetic Operations
// Testing: +, -, *, /, %, compound assignments

a = 10
b = 3

// Basic arithmetic
sum = a + b
diff = a - b
prod = a * b
quot = a / b
rem = a % b

println("=== Arithmetic Test ===")
println("a = {a}, b = {b}")
println("a + b = {sum}")
println("a - b = {diff}")
println("a * b = {prod}")
println("a / b = {quot}")
println("a % b = {rem}")

// Compound assignments
mut x = 10
x += 5
println("10 += 5 = {x}")

x -= 3
println("15 -= 3 = {x}")

x *= 2
println("12 *= 2 = {x}")

x /= 4
println("24 /= 4 = {x}")

// Float arithmetic
f1 = 3.5
f2 = 2.0
fsum = f1 + f2
fdiff = f1 - f2
fprod = f1 * f2
fquot = f1 / f2

println("Float: {f1} + {f2} = {fsum}")
println("Float: {f1} - {f2} = {fdiff}")
println("Float: {f1} * {f2} = {fprod}")
println("Float: {f1} / {f2} = {fquot}")

// Strength reduction tests (compiler optimization)
val = 5
println("5 * 2 = {val * 2}")
println("5 * 3 = {val * 3}")
println("5 * 4 = {val * 4}")
println("5 * 8 = {val * 8}")
println("5 * 16 = {val * 16}")

println("Test 2 PASSED")
