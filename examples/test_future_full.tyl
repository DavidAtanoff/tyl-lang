// Full Future Test

fn main -> int:
    print("Creating future...\n")
    let f = make_future[int]()
    print("Future created\n")
    
    print("Checking ready before set...\n")
    let ready1 = future_is_ready(f)
    print("Check done\n")
    
    if ready1:
        print("Ready: true\n")
    else:
        print("Ready: false\n")
    
    print("Setting value...\n")
    future_set(f, 42)
    print("Value set\n")
    
    print("Checking ready after set...\n")
    let ready2 = future_is_ready(f)
    print("Check done\n")
    
    if ready2:
        print("Ready: true\n")
    else:
        print("Ready: false\n")
    
    return 0
