// Comprehensive test of new syntax features

fn check_positive(x: int) -> int:
    return 0 if x < 0  // Inline conditional
    return x * 2

fn main:
    // 1. Test named loops with break
    mut found = 0
    outer: for i in 0..100:
        for j in 0..100:
            if i == 2 and j == 3:
                found = i * 10 + j
                break outer
    println(found)  // Expected: 23
    
    // 2. Test named loops with continue
    mut sum = 0
    outer2: for i in 0..4:
        for j in 0..4:
            if j == 2:
                continue outer2
            sum = sum + 1
    println(sum)  // Expected: 10
    
    // 3. Test range with step (by)
    mut stepSum = 0
    for i in 0..10 by 2:
        stepSum = stepSum + i
    println(stepSum)  // Expected: 30 (0+2+4+6+8+10)
    
    // 4. Test inline conditionals
    mut x = check_positive(5)
    println(x)  // Expected: 10
    x = check_positive(-3)
    println(x)  // Expected: 0
    
    // 5. Test single-line if
    if 1 == 1: println(42)  // Expected: 42
    
    // 6. Test brace blocks
    if 2 == 2 {
        println(99)  // Expected: 99
    }
    
    println("done")
