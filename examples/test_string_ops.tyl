// Test string operations

// Test upper and lower
s = "Hello World"
println("Original: {s}")
println("Upper: {upper(s)}")
println("Lower: {lower(s)}")

// Test trim
padded = "  hello  "
println("Trimmed: {trim(padded)}")

// Test starts_with and ends_with
text = "Hello World"
hw = "Hello"
ww = "World"
println("starts_with Hello: {starts_with(text, hw)}")
println("starts_with World: {starts_with(text, ww)}")
println("ends_with World: {ends_with(text, ww)}")
println("ends_with Hello: {ends_with(text, hw)}")

// Test substring
println("substring(0,5): {substring(text, 0, 5)}")
println("substring(6): {substring(text, 6)}")

// Test index_of
println("index_of World: {index_of(text, ww)}")
xyz = "xyz"
println("index_of xyz: {index_of(text, xyz)}")

// Test replace (constant)
replaced = replace("hello world", "world", "flex")
println("Replaced: {replaced}")
